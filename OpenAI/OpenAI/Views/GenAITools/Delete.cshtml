@model OpenAI.Models.GenAIToolsModel

@{
    ViewData["Title"] = "Delete";
}

<div class="parallax_body">
    <h2 class="text-center">Delete</h2>

    <div class="goldColour">
        <hr class="hrHeight" />
        <h3>Are you sure you want to delete this website?</h3>
        <hr class="hrHeight" />
    </div>

    <dl class="row p-5">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenAIName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenAIName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFilename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageFilename)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/images/"+Model.ImageFilename)" asp.asp-append-version="true" width="250px" height="250px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnchorLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnchorLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Like)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Like)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
