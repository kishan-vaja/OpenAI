@model IEnumerable<OpenAI.Models.RegitrationModel>
<h1>Log In</h1>

<video autoplay muted loop id="myVideo">
    <source src="~/image/GenerativeAITech.mp4" type="video/mp4">
    Your browser does not support HTML5 video.
</video>

<div class="row">
    <div class="col-5">
        <h4>Use a local account to log in.</h4>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Username)
            <input type="text" id="txtUserName" class="form-control" />
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.Password)
            <input type="text" id="txtPassword" class="form-control" />
        </div>

        <br />
        <div class="d-flex">
            <input type="checkbox" />
            <span class="mb-1 ms-1">Remember me?</span>
        </div>
        <br />
        <button type="button" class="btn btn-primary w-100">Log In</button>
        <div>
            <p>Forgot password?</p>
        </div>
    </div>
</div>